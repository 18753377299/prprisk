		<Arg>masterDataSource</Arg>
		<Arg>
			<Call id="dsbyfact" class="com.alibaba.druid.pool.DruidDataSourceFactory"
				name="createDataSource">
				<Arg>
					<Map>
						<Entry>
							<Item>username</Item>
							<Item>
								<New class="java.lang.String">
									<Arg>root</Arg>
								</New>
							</Item>
						</Entry>
						<Entry>
							<Item>password</Item>
							<Item>
								<New class="java.lang.String">
									<Arg>admin</Arg>
								</New>
							</Item>
						</Entry>
						<Entry>
							<Item>url</Item>
							<Item>
								<New class="java.lang.String">
									<Arg>jdbc:mysql://localhost:3306/platformdb?useUnicode=yes&amp;characterEncoding=UTF-8</Arg>
